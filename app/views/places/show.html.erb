<div>
<h1 class="text ps-4"><%= @place.name %></h1>
</div>

<div>
<h2 class="text ps-4">My Posts</h2>
</div>


<% if @current_user %>
  <div class="container">
    <div class="row">
      <% for post in @place.posts %>
        <% if post.user_id == session[:user_id] %>  
          <div class="col-md-3 col-sm-6">              
            <h3><%= post.title %></h3>
            <h4><%= post.posted_on %></h4>
            <% if post.uploaded_image.attached? %>
              <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
            <% end %>
            <p><%= post.description %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="container">
    <button type="button" class="btn btn-light"><a href="/posts/new?place_id=<%= @place.id %>">New Post</a></button>
  </div>

  <% else %>
  <div>
    <p class="text ps-4">Please log in to see your posts.</p>
  </div>
  <% end %>


<div class="container">
  <button type="button" class="btn btn-light"><a href="/places">Back to All Places</a></button>
</div>